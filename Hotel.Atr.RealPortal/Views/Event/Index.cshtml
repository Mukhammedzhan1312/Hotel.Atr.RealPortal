@model List<EventViewModel>

@{
    ViewData["Title"] = "Events";
    ViewData["Description"] = "A quality room of hotel ATR with sea or mountain view";
    ViewData["Keywords"] = "quality, room, hotel, ATR";

    ////
    ViewData["PageName"] = "Events";
    ViewData["PageDescription"] = "A quality room of hotel ATR with sea or mountain view";
    string eventClass = "";
}  
  

<!-- Event Area Start -->
<section class="event-area pt-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="section-title text-center">
                    <h3>upcoming events</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellente sque vel volutpat felis, eu condimentum massa. Pellentesque mollis eros vel mattis tempor. Aliquam </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="event-menu">
                    <button data-filter="*" class="active"> All</button>
                    <button data-filter=".music">Music Party</button>
                    <button data-filter=".birthday">Birthday Party</button>
                    <button data-filter=".conference">Conference</button>
                    <button data-filter=".wedding">Wedding Party</button>
                    <button data-filter=".photography">Photography Party</button>
                </div>
            </div>
        </div>
        <div class="row event-items">
            @foreach (EventViewModel item in Model){
                if(item.ImageSize==1){
                    eventClass = "col-md-4 small col-sm-4";
                }
                else{
                    eventClass = "col-md-8 col-sm-8";
                }

                <div class="single-event @eventClass col-xs-12 conference">
                    <div class="single-event-item">
                        <img src="@Url.Content(item.PathImage)" alt="">
                        <div class="event-text">
                            <h3 class="event-title">@item.EventTitle</h3>
                            <h3 class="author-name">@item.AuthorName</h3>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- Event Area End -->
